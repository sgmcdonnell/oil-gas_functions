    "import matplotlib.pyplot as plt\n",
    "import numpy as np\n",
    "from matplotlib.ticker import MaxNLocator\n",
    "\n",
    "def padprod(df, api_list, x, y, pad_name):\n",
    "\n",
    "    '''This function will return a time vs production plot for multiple wells and type curves.\n",
    "\n",
    "    Parameters: dataframe that includes columns with date, production, API number, and well identifier,\n",
    "    the name of the column that includes well name (name_header),\n",
    "    the name of the column that includes API numbers (api_header), \n",
    "    list of API numbers (api_list),\n",
    "    list of type_curves (type_curve_list),\n",
    "    name of date column (x),\n",
    "    name of production column (y),\n",
    "    pad name (or name of plot)\n",
    "\n",
    "    Returns: the plot\n",
    "    ''' \n",
    "    fig,a =  plt.subplots(1,1, figsize = (16,9.5), sharex='col')\n",
    "\n",
    "    \n",
    "    #type curve parameters \n",
    "    for well in np.unique(df[name_header]): \n",
    "        for tc in type_curve_list: \n",
    "            if (tc == well):\n",
    "                tdf = df[df[name_header] == tc].copy()\n",
    "                tdf = tdf.sort_values(by = x)\n",
    "                tdf.reset_index(inplace = True)\n",
    "                a.plot(tdf.index.values, tdf[y], label = tc, color = "black", linewidth = 3, alpha = 0.95)\n",
    "            \n",
    "    #well parameters   \n",
    "    for api in np.unique(df[api_header]):\n",
    "        for apis in api_list:\n",
    "            if (api == apis):\n",
    "                tdf = df[df[api_header]== api].copy()\n",
    "                tdf = tdf.sort_values(by = x)\n",
    "                tdf.reset_index(inplace = True)\n",
    "                a.plot(tdf.index.values, tdf[y], label = api, linewidth = 3, alpha = 0.95)\n",
    "\n",
    "    \n",
    "    a.set_title(pad_name, fontweight ='bold',fontsize =24)\n",
    "    a.set_xlabel('Days Producing', fontweight='bold', fontsize = 18)\n",
    "    a.set_ylabel(y, fontweight='bold', fontsize = 18)\n",
    "    a.tick_params(axis='y', labelsize=18)\n",
    "    a.tick_params(axis='x', labelsize=18)\n",
    "    a.yaxis.grid(zorder=0, color ='grey')\n",
    "\n",
    "  \n",
    "    ax = plt.gca()\n",
    "   \n",
    "    a.minorticks_on()\n",
    "    a.grid(which='minor', linestyle=':', linewidth='0.3', color='black')\n",
    "    a.xaxis.grid(False, which='minor')\n",
    "    a.xaxis.set_major_locator(MaxNLocator(integer=True))\n",
    "    legend = legend =a.legend(prop={\"size\":14, \"weight\":'bold'},loc = 'upper right', ncol = 2)\n",
    " \n",
    "    plt.locator_params(axis='x', nbins=12)"
   ]
  }
