    "#did not create this function- came from somewhere else and I modified the alignment of labels relative to x coordinate of bar\n",
    "\n",
    "def add_value_labels(ax, spacing=4):                                      #Inputs:  ax(matplotlib.axes.Axes): The matplotlib object containing the axes of the plot to annotate, spacing (int): The distance between the labels and the bars.\n",
    "\n",
    "    count = 1\n",
    "    for rect in ax.patches:                                                 # Get X and Y placement of label from rect.\n",
    "        y_value = rect.get_height()\n",
    "        count +=1\n",
    "        \n",
    "\n",
    "        if (count % 2) == 0: \n",
    "            x_value = rect.get_x() + rect.get_width()/6\n",
    "        else:\n",
    "            x_value = rect.get_x() + rect.get_width()/1.05 \n",
    "\n",
    "        space = spacing                                                     # Number of points between bar and label. Change to your liking. (spacing (int): The distance between the labels and the bars)\n",
    "        va = 'bottom'                                                       # Vertical alignment for positive values\n",
    "               \n",
    "        if y_value < 0:                                                     # If value of bar is negative: Place label below bar\n",
    "            space *= -1                                                     # Invert space to place label below\n",
    "            va = 'top'                                                      # Vertically align label at top\n",
    "            \n",
    "\n",
    "        label = \"{:,.0f}\".format(y_value)                                 # Use Y value as label and format number with one decimal place\n",
    "\n",
    "        ax.annotate(                                                        # Create annotation\n",
    "            label,                                                          # Use `label` as label\n",
    "            (x_value, y_value),                                             # Place label at end of the bar\n",
    "            xytext=(0, space),                                              # Vertically shift label by `space`\n",
    "            textcoords=\"offset points\",                                   # Interpret `xytext` as offset in points\n",
    "            ha='center',                                                    # Horizontally center label\n",
    "            va=va, fontsize = 12, fontweight = 'bold')                      # Vertically align label differently for"
   ]
