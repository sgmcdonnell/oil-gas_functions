    "#comparing budget to actual costs\n",
    "def costplot_B(df, api_header, name_header,API_list,feature1_bud, feature1_act, feature2_bud, feature2_act, y1max, y2max, y1min = 0, y2min = 0):                     \n",
    "\n",
    "'''This function returns a bar plot comparing two sets of actual costs to the budget.\n",
    "\n",
    "INPUTS: \n,"
    "df: dataframe \n,"
    "api_header: name of the API column\n",
    "name_header: name of the well name column \n",
    "API_list: list of API numbers \n"
    "feature1_bud: first budget costs\n",
    "feature1_act: actual budget costs\n",
    "feature2_bud: second budget costs\n",
    "feature2_act: second actual costs\n",
    "y1max: primary yaxis max limit\n",
    "y2max: secondary yaxis max limit\n",
    "\n",
    "RETURNS:\n",
    "Double bar chart\n",
    "'''\n",
    "\n",
    "    length = len(df.index)\n",
    "    for api in API_list:\n",
    "        for i in range (1,length+1): \n",
    "            if (df.iloc[i-1][api_header] == api):\n",
    "                FINAL = FINAL.append(df.iloc[[i-1]],ignore_index = True)   \n",
    "\n",
    "                \n",
    "    # LABELS for plot\n",
    "    #labels =[] \n",
    "  \n",
    "    labels = FINAL[name_header] \n",
    "\n",
    "\n",
    "    #PLOT\n",
    "    length = len(FINAL.index)\n",
    "    fig, ax = plt.subplots()\n",
    "    ax2 = ax.twinx()\n",
    "    plt.rcParams[\"axes.edgecolor\"] = \"black\"\n",
    "    plt.rcParams[\"axes.linewidth\"] = 1\n",
    "    \n",
    "\n",
    "    for i in range (1,length+1): \n",
    "        index = np.arange(len(FINAL.index))\n",
    "        bar_width = 0.6\n",
    "        opacity = 0.90\n",
    "\n",
    "    \n",
    "        rects1 = ax.bar(i-1-2* (bar_width/4), FINAL.iloc[i-1][feature1_bud], bar_width/3,alpha=opacity,color='teal')\n",
    "        rects2 = ax.bar(i-1- bar_width/4, FINAL.iloc[i-1][feature1_act], bar_width/3,alpha=opacity,color='orange')\n",
    "        rects3 = ax2.bar(i-1+ bar_width/4, FINAL.iloc[i-1][feature2_bud], bar_width/3,alpha=opacity,color='teal')\n",
    "        rects4 = ax2.bar(i-1+ 2*(bar_width/4), FINAL.iloc[i-1][feature2_act], bar_width/3,alpha=opacity,color='gold')\n",
    "\n",
    "    \n",
    "    x = np.arange(len(labels))\n",
    "\n",
    "    plt.xticks(x,labels, fontsize = 14)\n",
    "    ax.tick_params(axis='y', labelsize=14)\n",
    "    ax.tick_params(axis='x', labelsize=14)\n",
    "    ax2.tick_params(axis='y', labelsize=14)\n",
    "    ax.set_ylabel('Cost ($)', fontweight = \"bold\", fontsize = 16)\n",
    "    plt.title('Budget vs. Actual', fontweight = \"bold\", fontsize = 20)\n",
    "    ax.set_ylim(y1min,y1max)\n",
    "    ax2.set_ylim(y2min,y2max)\n",
    "    ax.yaxis.grid(zorder=0, color ='grey')\n",
    "    ax.grid(which='minor', linestyle=':', linewidth='0.5', color='black')\n",
    "    ax2.grid(False)\n",
    "    ax2.set_axisbelow(True)\n",
    "    ax.set_facecolor('xkcd:white')\n",
    "    plt.gcf().set_size_inches(9.5, 4)\n",
    "    ax.minorticks_on()\n",
    "    ax.grid(which='minor', linestyle=':', linewidth='0.5', color='black')\n",
    "    ax.grid(which='minor', linestyle=':', linewidth='0.5', color='black')\n",
    "    ax.yaxis.set_minor_locator(AutoMinorLocator(2))\n",
    "    ax.xaxis.grid(False, which='minor')\n",
    "\n",
    "\n",
    "    blue_patch = mpatches.Patch(color='teal', label='Budget')\n",
    "    orange_patch = mpatches.Patch(color='orange', label=feature1_act)\n",
    "    gold_patch = mpatches.Patch(color='gold', label=feature2_act)\n",
    "    legend =plt.legend(handles=[blue_patch, orange_patch, gold_patch], loc = 'upper center', bbox_to_anchor = (.5,-0.08), ncol = 3,fontsize = 16)\n",
    "    \n",
    "    \n",
    "    frame = legend.get_frame()\n",
    "    frame.set_facecolor('white')\n",
    "\n",
    "    \n",
    "    add_value_labels(ax,1)\n",
    "    add_value_labels(ax2,1)"
